@model BioMech.Models.User

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Личный аккаунт</title>
    <link rel="icon" href="/img/head__foot/Логотип.png">
    <link rel="stylesheet" href="../css/PersonalData/lk.css">
    <link rel="stylesheet" href="../css/Common/style.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Mulish&display=swap" rel="stylesheet">
    <script src="~/js/Common/validation.js" defer></script>
    <script src="~/js/Common/clickActive.js" defer></script>
    <script src="~/js/personalAccount.js" defer></script>
</head>

<body>
    <div class="wrapper">
        <div class="modal" id="confirmModal" style="display:none;">
            <div>
                <p>Вы уверены, что хотите удалить данную фотографию?</p>
                <div class="modalButton">
                    <button id="yesBtn" class="button">Да</button>
                    <button id="noBtn" class="button">Нет</button>
                </div>
            </div>
        </div>
        <div class="modal" id="confirmMassage" style="display:none;">
            <div>
                <p class="modalCenter">Данные успешно изменены</p>
            </div>
        </div>
        @Html.Partial("_Header")
        <div class="container">
            <div class="lk">
                <div class="lk__navigation">
                    <ul>
                        <li><a id="lic" asp-controller="PersonalData" asp-action="PersonalAccount">Личные данные</a></li>
                        <li><a asp-controller="PersonalData" asp-action="DeletePersonalAccount">Удаление аккаунта</a></li>
                    </ul>
                </div>
                <div class="lk__info">
                    <div class="lk__info__item">
                        <h2>Личные данные</h2>
                        <div class="lk__blocks">
                            <div class="lk__block">
                                <h3 class="h-left">Имя и фамилия</h3>
                                <form method="post" id="update-name-form">
                                    <div class="form__block form__block__two">
                                        <div class="autorization-field">
                                            <input data-required="true" data-max-length="50" data-min-length="2" name="firstname" value="@Model.FirstName" placeholder="Имя">
                                        </div>
                                        <div class="autorization-field">
                                            <input data-required="true" data-max-length="50" data-min-length="2" name="surname" value="@Model.SecondName" placeholder="Фамилия">
                                        </div>
                                    </div>
                                    <button type="submit" class="PD__button" id="changeName">Изменить личные данные</button>
                                </form>
                            </div>
                        </div>
                    </div>
                    <div class="photo">
                        <div class="photo__ava" id="photo__ava">
                            @if (Model.PhotoProfile != null)
                            {
                                <img src="@Model.PhotoProfile" alt="Profile Photo" />
                            }
                            else
                            {
                                <img src="~/img/profile.png" id="photoProfile" alt="Default Profile" />
                            }
                        </div>
                        <div class="photo__action">
                            <input type="file" id="file" />
                        </div>
                    </div>
                    <div class="lk__info__item">
                        <h2>Почта & Пароль </h2>
                        <div class="lk__blocks">
                            <div class="lk__block">
                                <h3 class="h-left">Почта</h3>
                                <form method="post" id="update-email-form">
                                    <div class="form__block">
                                        <div class="autorization-field">
                                            <input data-email="true" name="email" value="@Model.Email" placeholder="Почта">
                                        </div>
                                    </div>
                                    <button type="submit" class="PD__button" id="changePochta">Изменить почту</button>
                                </form>
                            </div>
                            <div class="lk__block">
                                <h3 class="h-left">Пароль</h3>
                                <form method="post" action="" id="add-form">
                                    <div class="form__block ">
                                        <div class="autorization-field" id="changeBlock">
                                            <input name="password" value="passwordplug" type="password" placeholder="Пароль" readonly>
                                        </div>
                                    </div>
                                    <button type="submit" class="PD__button" id="changePassword">Изменить пароль</button>
                                </form>
                            </div>
                        </div>
                    </div>
                    <div class="lk__info__item delete-account">
                        <h2>Удаление аккаунта</h2>
                        <div class="lk__blocks dlt">
                            <div class="lk__block">
                                <p class="delete-account-text">
                                    Это действие необратимо. Вся ваша информация, записи в журнале, статистика и т.д. будут полностью удалены. Это не
                                    повлияет на вашу возможность повторно создать совершенно новую учетную запись в будущем.
                                </p>
                                <h3 class="h-left">Введите свой пароль для подтверждения удаления аккаунта</h3>
                                <form method="post" asp-controller="PersonalData" asp-action="DeleteAccount" class="lk__block">
                                    <div class="form__block">
                                        <div class="autorization-field">
                                            <input data-password="true" name="checkPasswordForDelete" type="password" placeholder="Введите свой пароль">
                                            <button class="checkPassword" type="submit"><img src="../img/authorization/ic_eye.png" alt=""></button>
                                        </div>
                                    </div>
                                    <button type="submit" class="PD__button" id="delAccount">Удалить аккаунт</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @Html.Partial("_Footer")
</body>

</html>
